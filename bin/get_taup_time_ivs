#!/bin/tcsh




set dir = .
set ivs = $1
set traffic = $2

set taup_file = ./taup_time.${ivs}


set name_convert = ~/bin/phase_name_convert_complex_to_simple.py
set PHASE = `python2 $name_convert $traffic`

# remove major flag
if(`echo $PHASE | grep m ` == "" ) then
set traffic_PHASE = $PHASE
set dt = `cat $taup_file |awk -v dd=${traffic_PHASE} '$3==dd&&$8<180 {print $4}'|awk 'NR==1 {print $1}'`
if($dt == 0 || $dt == "") then
set dt = 510
endif


echo $dt
else
set traffic_PHASE = `echo $PHASE | sed 's/.$//' `
set dt = `cat $taup_file |awk -v dd=${traffic_PHASE} '$3==dd&&$8>180 {print $4}'|awk 'NR==1 {print $1}'`
if($dt == 0|| $dt == "") then
set dt = 510
endif
echo $dt
endif



